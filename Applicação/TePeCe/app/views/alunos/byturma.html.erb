<% provide(:title, 'All users') %>
<h1></h1>

  <div>
	<br>
	<% if current_user.direc %>
      <%= link_to image_tag("add-database-icon.png") + "Adicionar Aluno", new_aluno_path  %>
    <% end %>
	  <br><br> <br>
  </div>



<legend>Alunos da turma <%= @turma.designacao %></legend>


<%= will_paginate %>

<div class="span9" id="content">
					<div class="row-fluid">
                        <!-- block -->
                        <div class="block">
                            
                            <div class="block-content collapse in">
                                <div class="span12">
  									<table class="table" border="0">
						              <thead>									
										<tr>
						                  <th>#</th>
						                  <th>Nome</th>
						                  <th></th>
						                  <th></th>
						                </tr>
						              </thead>
						              
									  
									  
									  <tbody>
									   <% @alunos.each do |aluno| %>
						                <tr>
						                  <td><%= aluno.id %></td>
						                  <td><b><%= link_to aluno.nome, aluno %></b></td>
						                  
										  <% if current_user.direc %>
										  <td><%= link_to image_tag("edit-icon24.png") +'Editar', edit_aluno_path(aluno) %></td>
						                  
										  <% if current_user.admin? %>
										  <td><%= link_to image_tag("delete-icon24.png") + 'Apagar', aluno, method: :delete, data: { confirm: 'Quer apagar esta turma?' } %></td>
										  <% end %>
										  <% end %>
										</tr>
										 <% end %>
						              </tbody>
									  
									  
						            </table>
                                </div>
                            </div>
                        </div>
                        <!-- /block -->
</div>


<%= will_paginate %>

<div class="links">
	<br>
	<h5>
		<%= link_to image_tag("back-icon32.png") + " Voltar", turmas_path %>
	</h5>
</div>