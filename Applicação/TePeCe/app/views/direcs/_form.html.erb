<%= form_for(@direc) do |f| %>
  <% if @direc.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@direc.errors.count, "error") %> prohibited this direc from being saved:</h2>

      <ul>
      <% @direc.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
	<div class="span3 offset1">
  
		  <div class="field">
			<%= f.label :nome %>
			<%= f.text_field :nome %>
		  </div>
		  
		  <div class="field">
			<%= f.label :dataNasc %>
			<%= f.date_select :dataNasc %>
		  </div>
		  
		  <div class="field">
			<%= f.label :nBI %>
			<%= f.number_field :nBI %>
		  </div>

		  <div class="field">
			<%= f.label :morada %>
			<%= f.text_field :morada %>
		  </div>

		  <div class="field">
			<%= f.label :cp %>
			<%= f.text_field :cp %>
		  </div>

		  <div class="field">
			<%= f.label :localidade %>
			<%= f.text_field :localidade %>
		  </div>
  
   	  <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmacao" %>
      <%= f.password_field :password_confirmation %>
  
  
		  <div class="actions">
			<%= f.submit "Gravar", class: "btn btn-primary" %>
		  </div>
	</div>
</div>  
<% end %>
